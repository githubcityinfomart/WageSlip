<script>
      $(document).ready(function () {
        let currentPage = 1;
        const pageSize = 5;
        let isLoading = false;
        let hasMoreData = true;

        function loadMoreNews() {
            // Prevent multiple simultaneous requests
            if (isLoading || !hasMoreData) return;

            isLoading = true;
            $('#loading').show();

            $.ajax({
                url: '@Url.Action("Home", "Home")',
                type: 'GET',
                data: {
                    pageNumber: currentPage + 1,
                    pageSize: pageSize
                },
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                success: function (data) {
                    if (data.trim()) {
                        // Append new items to the news box
                        $('.news_box').append(data);
                        currentPage++;
                    } else {
                        // No more data
                        hasMoreData = false;
                        $('#loading').text('No more news to load');
                    }
                },
                error: function () {
                    $('#loading').text('Error loading more data');
                },
                complete: function () {
                    isLoading = false;
                    $('#loading').hide();
                }
            });
        }

        // Scroll event for infinite scroll
        $(window).on('scroll', function() {
            if ($(window).scrollTop() + $(window).height() >= $(document).height() - 100) {
                loadMoreNews();
            }
        });
    });
</script>

