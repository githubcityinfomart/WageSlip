@model MyPaySlipLive.Models.AdminModel.ManageUsersViewModel
<!doctype html>
<html class="no-js h-100" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Admin  Dashboard</title>
    <meta name="description" content="A high-quality &amp; free Bootstrap admin dashboard template pack that comes with lots of templates and components.">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <style type="text/css">
        .position-sticky {
            position: sticky;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body class="h-100">
    <div class="container-fluid">
        <div class="row">
            <!-- Main Sidebar -->
            <aside class="main-sidebar col-12 col-md-3 col-lg-2 px-0">
                <div class="main-navbar">
                    <nav class="navbar align-items-stretch navbar-light bg-info flex-md-nowrap border-bottom p-0">
                        <a class="navbar-brand w-100 mr-0" href="#" style="line-height: 25px;">
                            <div class="d-table m-auto">
                                <img id="main-logo" class="d-inline-block align-top" width="180" alt="logo" src="~/images/logo/logo.png">
                            </div>
                        </a>
                        <a class="toggle-sidebar d-sm-inline d-md-none d-lg-none">
                            <i class="material-icons">&#xE5C4;</i>
                        </a>
                    </nav>
                </div>
                <form action="#" class="main-sidebar__search w-100 border-right d-sm-flex d-md-none d-lg-none">
                    <div class="input-group input-group-seamless ml-3">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                        <input class="navbar-search form-control" type="text" placeholder="Search for something..." aria-label="Search">
                    </div>
                </form>
                <div class="nav-wrapper">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                                <i class="material-icons">people</i>
                                <span>Manage Users</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "SalaryUploader" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="SalaryUploader">
                                <i class="material-icons">upload</i>
                                <span>Salary Upload</span>
                            </a>
                        </li>

                    </ul>
                </div>
            </aside>
            <!-- End Main Sidebar -->
            <main class="main-content col-lg-10 col-md-9 col-sm-12 p-0 offset-lg-2 offset-md-3">
                <div class="main-navbar sticky-top bg-white">
                    <!-- Main Navbar -->
                    <nav class="navbar align-items-stretch navbar-light flex-md-nowrap p-0">
                        <form action="#" class="main-navbar__search w-100 d-none d-md-flex d-lg-flex">
                            <div class="input-group input-group-seamless ml-3"></div>
                        </form>
                        <ul class="navbar-nav border-left flex-row align-items-center">

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-nowrap px-3" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">

                                    <span class="d-none d-md-inline-block">Have an Account?</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-small">
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                        <i class="material-icons">&#xE7FD;</i> Logout
                                    </a>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="ResetPassword">
                                        <i class="material-icons">vertical_split</i> Change Password
                                    </a>
                                </div>
                            </li>
                        </ul>
                        <nav class="nav">
                            <a href="#" class="nav-link nav-link-icon toggle-sidebar d-md-inline d-lg-none text-center border-left" data-toggle="collapse" data-target=".header-navbar" aria-expanded="false" aria-controls="header-navbar">
                                <i class="material-icons">&#xE5D2;</i>
                            </a>
                        </nav>
                    </nav>
                </div>
                <!-- / .main-navbar -->

                <div class="container-fluid px-4">
                    <!-- Page Header -->
                    <div class="page-header row no-gutters py-4 ">
                        <div class="col-12 text-sm-left mb-0">
                            <h4 class="page-title">MANAGE USERS</h4>

                        </div>
                    </div>
                    @*   <div class="form-row">
                    <div class="form-group col-md-6">
                    <label for="feInputState">Enter User name to Search:</label>
                    <input type="text" class="form-control" id="addcategory" placeholder="" value="@Model.SearchTerm">
                    </div>
                    <div class="form-group col-md-6 spc-mrg-tp-30">
                    <button type="search" class="btn btn-accent pull-left">Search</button>
                    </div>
                    </div> *@
                    <form asp-controller="Admin" asp-action="Search" method="post">
                        <!-- You can use "post" if needed -->
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="feInputState">Enter User name to Search:</label>
                                <input type="text" class="form-control" id="addcategory" name="searchTerm" placeholder="User name   " value="@TempData["SearchTerm"]">
                            </div>
                            <div class="form-group col-md-6 spc-mrg-tp-30">
                                <button type="submit" class="btn btn-accent pull-left">Search</button>
                                @if (!string.IsNullOrWhiteSpace(TempData["SearchTerm"]?.ToString()))
                                {
                                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary pull-left" style="margin-left: 10px;">✖ Clear</a>
                                }
                            </div>

                        </div>
                    </form>
                    <div class="page-header row no-gutters">
                        <div class="col-12 text-sm-left mb-0">
                            <p><strong>Note:</strong> You may enter only first few characters of Company name to search.</p>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                </div>

                <div class="clearfix"></div>
                <!-- <div class="input-group-prepend"> -->
                <!-- <button class="btn btn-primary" type="button">Add To Franchise</button> -->
                <!-- </div> -->
                <!-- <input type="text" class="form-control" placeholder="Search Pandit" aria-label="Recipient's username" aria-describedby="basic-addon2"> </div> -->
                <!-- End Default Light Table -->
                <div class="container-fluid px-4">
                    <div class="row">
                        <div class="col">
                            <div class="card card-small mb-4 col-lg-12 col-12">

                                <div class="card-body p-0 pb-3 text-left">
                                    <table class="table mb-0">
                                        <thead class="bg-light">
                                            <tr>
                                                <th scope="col" class="border-0">#</th>
                                                <th scope="col" class="border-0">User Name</th>
                                                <th scope="col" class="border-0">Employee Code</th>
                                                <th scope="col" class="border-0">Password</th>
                                                <th scope="col" class="border-0">Mobile</th>
                                                <th scope="col" class="border-0">Action</th>
                                            </tr>
                                        </thead>

                                        @if (Model.Users != null && Model.Users.Any())
                                        {
                                            int SNo = (Model.CurrentPageSize * Model.CurrentPage) - Model.CurrentPageSize;
                                            <tbody>
                                                @foreach (var data in Model.Users)
                                                {
                                                    SNo++;
                                                    <tr>
                                                        <td style="display:none;" id="#getUserId">@data.Id</td>
                                                        <td scope="col" class="border-0">@SNo</td>
                                                        <td scope="col" class="border-0">@data.Username</td>
                                                        <td scope="col" class="border-0">@data.Ecode</td>
                                                        <td scope="col" class="border-0">@data.Password.ToLower()</td>
                                                        <td scope="col" class="border-0">@(!string.IsNullOrEmpty(data.MobileNumber) ? data.MobileNumber : "0")</td>
                                                        <td scope="col" class="border-0">
                                                            <button type="button" class="btn-custom-pay btn btn-sm btn-outline-danger btn-info btn-lg" onclick="showPopup('@data.Id', '@data.Username','@data.Password')">
                                                                Reset Password
                                                            </button>
                                                        </td>
                                                        @*                                                         <td scope="col" class="border-0"><a asp-controller="Admin" asp-action="ResetPassword" class="btn-custom-pay btn btn-sm btn-outline-danger btn-info btn-lg">Reset Password</a></td>
                                                *@
                                                    </tr>
                                                }
                                            </tbody>
                                            <input type="hidden" id="currentPageSize" value="@ViewBag.PageSize">
                                            <label for="options">Choose an option:</label>
                                            <select id="options" name="options" onchange="changePageSize(this.value)">
                                                <option value="10" selected>10</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>

                                            </select>
                                            @if (Model.TotalPages > 1)
                                            {
                                                <nav aria-label="Page navigation" style="overflow: auto;" class="m-4">
                                                    <ul class="pagination">
                                                        @if (Model.CurrentPage > 0)
                                                        {
                                                            <li class="page-item @(Model.CurrentPage == 1 ? "active" : "")">
                                                                <a class="page-link" asp-controller="Admin" asp-action="Dashboard" asp-route-pageNumber="1">1</a>
                                                            </li>

                                                            @if (Model.CurrentPage > 3)
                                                            {
                                                                <li class="page-item disabled">
                                                                    <span class="page-link">...</span>
                                                                </li>
                                                            }
                                                        }

                                                        @for (var i = Math.Max(2, Model.CurrentPage - 1); i <= Math.Min(Model.TotalPages - 1, Model.CurrentPage + 1); i++)
                                                        {
                                                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                                                <a class="page-link" asp-controller="Admin" asp-action="Dashboard" asp-route-pageNumber="@i">@i</a>
                                                            </li>
                                                        }

                                                        @if (Model.CurrentPage < Model.TotalPages - 1)
                                                        {
                                                            @if (Model.CurrentPage < Model.TotalPages - 2)
                                                            {
                                                                <li class="page-item disabled">
                                                                    <span class="page-link">...</span>
                                                                </li>
                                                            }

                                                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "active" : "")">
                                                                <a class="page-link" asp-controller="Admin" asp-action="Dashboard" asp-route-pageNumber="@Model.TotalPages">@Model.TotalPages</a>
                                                            </li>
                                                        }
                                                       

                                                        @if (Model.CurrentPage >= Model.TotalPages - 1)
                                                        {
                                                         
                                                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "active" : "")">
                                                                <a class="page-link" asp-controller="Admin" asp-action="Dashboard" asp-route-pageNumber="@Model.TotalPages">@Model.TotalPages</a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </nav>
                                            }


                                        }
                                        else
                                        {
                                            <div>No Record Found!!</div>

                                        }

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="main-footer d-flex p-2 px-3 bg-white border-top position-sticky">
                        <span class="copyright mx-auto my-auto mr-2">Copyright © My Wage Slip.</span>
                    </footer>





</body>
</html>



<!-- Modal For Reset Password of Employees -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="resetPasswordModalLabel">Reset Password</h5>
                <button type="button" class="close" onclick="closePopup()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <p>Are you sure you want to reset the password for : <span id="userNameDisplayText"></span>?</p>

                <form asp-controller="Admin" asp-action="ResetPasswordOfEmployees" method="post">
                    <input type="hidden" asp-for="EmployeeId" id="userIdDisplay" />
                     <button type="submit" class="btn btn-primary" id="submitResetPassword">Yes</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        debugger
        // Get the current page size from the hidden input using jQuery
        var currentPageSize = $('#currentPageSize').val();

        // Set the selected option in the dropdown based on the current page size
        $('#options').val(currentPageSize);
    });
    function showPopup(Id, Name, oldPassword) {
        $('#newpassWord').val(''); $('#confirmPassWord').val('');
        $('#resetPasswordModal').modal('show');
        $('#userIdDisplay').val(Id);
        $('#userNameDisplayText').text(Name);
        $('#oldPasswordDisplay').val(oldPassword);
    }

    function closePopup() {
        $('#resetPasswordModal').modal('hide');
    }
    function changePageSize(pageSize) {
        // Send an AJAX request to the controller
        fetch('/Admin/ChangePageSize', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'  // Identify the request as an AJAX request
            },
            body: JSON.stringify({ pageSize: pageSize })
        })
            .then(response => response.json())
            .then(data => {
                // Handle the response if necessary
                console.log('Page size changed:', data);
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }
    function changePageSize(pageSize) {
        $.ajax({
            url: '/Admin/ChangePageSize',
            type: 'POST',
            data: { pageSize: pageSize },
            success: function (response) {

                window.location.href = "/Admin/Dashboard";
            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
            }
        });
    }
</script>