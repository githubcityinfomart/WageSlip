@model IEnumerable<MyPaySlipLive.Models.AdminModel.SalaryListViewModel>

@{
    ViewData["Title"] = "Salary List";
}

<h2>Salary List</h2>

<!-- Print button -->
<button class="btn btn-primary mb-3"  type="button">Print</button>

<!-- Salary list table -->
<div id="salaryTableContainer" style="overflow-x: auto;">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>User</th>
                <th>Sap Code</th>
                <th>Designation</th>
                <th>PF Number</th>
                <th>ESI Number</th>
                <th>Location</th>
                <th>Basic</th>
                <th>Total</th>
                <th>Days</th>
                <th>NH/LV</th>
                <th>Reimbursement</th>
                <th>HRA</th>
                <th>Conveyance</th>
                <th>Others</th>
                <th>Total</th>
                <th>Month</th>
                <th>PF</th>
                <th>ESI</th>
                <th>Advance</th>
                <th>TDS</th>
                <th>Transferred To A/C</th>
                <th>Vide Check</th>
                <th>Net INR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CompanyName</td>
                    <td>@item.User</td>
                    <td>@item.SapCode</td>
                    <td>@item.Designation</td>
                    <td>@item.PfNumber</td>
                    <td>@item.EsiNumber</td>
                    <td>@item.Location</td>
                    <td>@item.Basic</td>
                    <td>@item.Ttl</td>
                    <td>@item.Days</td>
                    <td>@item.NhLv</td>
                    <td>@item.Reimb</td>
                    <td>@item.Hra</td>
                    <td>@item.Conv</td>
                    <td>@item.Others</td>
                    <td>@item.Total</td>
                    <td>@item.Month</td>
                    <td>@item.Pf</td>
                    <td>@item.Esi</td>
                    <td>@item.Adv</td>
                    <td>@item.Tds</td>
                    <td>@item.TransferredToAc</td>
                    <td>@item.VideCheck</td>
                    <td>@item.NetInr</td>
                </tr>
            }
        </tbody>
    </table>
</div>

